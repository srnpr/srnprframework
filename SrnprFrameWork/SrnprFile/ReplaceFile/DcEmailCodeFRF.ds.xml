<?xml version="1.0" encoding="utf-8" ?>
<ReplaceFileRoot  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				  xsi:schemaLocation="http://SrnprFrameWork/ReplaceFileSchema/ReplaceFile ReplaceFileSchemaFRF.xsd">
	<ReplaceFile>

		<!--######################################以下内容由设计人员维护#######################################-->

		<ReplaceFileDesign>

			<!--规则匹配序列-->
		<RuleItem>
			<!--规则列表-->
			<Rule>
				<!--表达式匹配规则序列 判断结果true时执行调用模板  该规则执行逻辑为从上向下顺序执行 碰到一条结果true就跳出执行逻辑-->
				<RuleExpression>

					<!--表达式之一-->
					<ExpressionInfo>
						<!--要调用的模板编号-->
						<TempleteGuid>templeteguidone</TempleteGuid>
						<!--表达式 支持字段级匹配  暂时不支持循环级规则-->
						<Expression>{$字段七号}=未确认状态</Expression>
					</ExpressionInfo>

					<!--表达式之一-->
					<ExpressionInfo>
						<TempleteGuid>templeteguidtwo</TempleteGuid>
						<Expression>{$字段七号}+2-(3+4)>{$字段八号}</Expression>
					</ExpressionInfo>
				</RuleExpression>
			</Rule>
		</RuleItem>


		<!--模板序列-->
		<TempleteItem>
			<!--模板-->
			<Templete GuId="templeteguidone">
				<!--邮件类模板-->
				<EmailInfo>
					<!--邮件标题 支持非循环级替换规则-->
					<Title>
						你好，你的{$字段一号}将于{$字段七号}送达到你手
					</Title>
					<!--邮件内容-->
					<Content>
						<![CDATA[
			
						<html>
						<head></head>
						<body>
							<div>
							会员的信息
							{$字段二号}测试邮件
			                
							
							
							第一列表开始：
							{#列表开始}
							   明细编号：{#循环字段十一号}
							{#列表结束}
							</div>
							<br/>
							
							
							第二列表开始：
							{#列表开始}
							   状态编号：{#循环字段十三号}
							   刷新时间:{#循环字段十四号}
			                   
							   用户名(列表可以调用主数据)：{$字段八号}
							{#列表结束}
						</body>
					</html>
						
						
						]]>
					</Content>
				</EmailInfo>
			</Templete>
			<Templete GuId="templeteguidtwo">
				<EmailInfo>
					<Title>
						你好，你的{$字段一号}将于{$字段七号}送达到你手
					</Title>
					<Content>
						<![CDATA[
			
						<html>
						<head></head>
						<body>
							<div>
							会员的信息
							{$字段二号}测试邮件
			                
							
							
							第一列表开始：
							{#列表开始}
							   明细编号：{#循环字段十一号}
							{#列表结束}
							</div>
							<br/>
							
							
							第二列表开始：
							{#列表开始}
							   状态编号：{#循环字段十三号}
							   刷新时间:{#循环字段十四号}
			                   
							   用户名(列表可以调用主数据)：{$字段八号}
							{#列表结束}
						</body>
					</html>
						
						
						]]>
					</Content>
				</EmailInfo>


			</Templete>
		</TempleteItem>




		</ReplaceFileDesign>


	</ReplaceFile>
</ReplaceFileRoot>